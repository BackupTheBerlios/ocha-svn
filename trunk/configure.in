dnl Process this file with autoconf to produce a configure script.

AC_INIT(src/target.h)
dnl Every other copy of the package version number gets its value from here
AM_INIT_AUTOMAKE(ocha, 0.1.0)

dnl create a config.h file (Automake will add -DHAVE_CONFIG_H)
AM_CONFIG_HEADER(config.h)

AC_SUBST(VERSION)

ISODATE=`date +%Y-%m-%d`
AC_SUBST(ISODATE)

AC_CANONICAL_HOST

dnl Checks for programs.
AC_PROG_INSTALL
AC_PROG_CC
AC_PROG_LIBTOOL

dnl Checks for libraries.
AM_PATH_CHECK()
AM_PATH_GLIB_2_0(, , exit 10, "gthread")
AC_CHECK_LIB(dmallocth, dmalloc_debug_setup)

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(unistd.h string.h fcntl.h stdlib.h stdio.h stdbool.h)

dnl Checks for typedefs, structures, and compiler characteristics.

dnl Checks for library functions.

dnl Configuration
CFLAGS="-std=c99 $GLIB_CFLAGS -O"
LIBS="$GLIB_LIBS $LIBS"

TEST_CFLAGS="-g -Ddmalloc $CHECK_CFLAGS"
TEST_LIBS="-ldmallocth $CHECK_LIBS"
AC_SUBST([TEST_CFLAGS])
AC_SUBST([TEST_LIBS])


dnl Output
AC_OUTPUT( Makefile src/Makefile )
